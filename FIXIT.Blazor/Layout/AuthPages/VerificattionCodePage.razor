                            <input type="text"
                                   class="form-control form-control-lg text-center fw-bold"
                                   maxlength="1">
                        </div>
                        <div class="col-2">
                            <input type="text"
                                   class="form-control form-control-lg text-center fw-bold"
                                   maxlength="1">
                        </div>
                        <div class="col-2">
                            <input type="text"
                                   class="form-control form-control-lg text-center fw-bold"
                                   maxlength="1">
                        </div>
                    </div>

                    <!-- Button -->
                    <button class="btn btn-primary btn-lg w-100">
                        Verify my account
                    </button>
                </div>
            </div>

            <!-- Resend -->
            <p class="text-center text-muted mt-4">
                Didn’t receive it?
                <a href="#" class="fw-semibold text-decoration-none ms-1">
                    Resend code
                </a>
            </p>

        </div>
    </div>
</div>

