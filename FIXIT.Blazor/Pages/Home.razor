@page "/"
@attribute [Authorize]
@inject NavigationManager Navigation

<PageTitle>Home</PageTitle>

<div class="mb-4">
    <h2 class="fw-bold">👋 Welcome to FIXIT</h2>
    <p class="text-muted">Your one-stop platform for managing fix-it job posts and service providers.</p>
</div>

<div class="row g-4">

    <!-- Job Posts Card -->
    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0 hover-shadow" style="cursor:pointer;"
             @onclick='() => Navigation.NavigateTo("/job-posts")'>
            <div class="card-body text-center py-5">
                <div class="rounded-circle bg-primary bg-opacity-10 d-inline-flex align-items-center justify-content-center mb-3"
                     style="width:70px;height:70px;">
                    <i class="bi bi-briefcase-fill fs-2 text-primary"></i>
                </div>
                <h5 class="card-title fw-bold">Job Posts</h5>
                <p class="card-text text-muted small">
                    Browse, search, create, update and delete job posts.
                </p>
                <button class="btn btn-primary btn-sm mt-2">
                    Go to Job Posts <i class="bi bi-arrow-right ms-1"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Profile Card -->
    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0" style="cursor:pointer;"
             @onclick='() => Navigation.NavigateTo("/profile")'>
            <div class="card-body text-center py-5">
                <div class="rounded-circle bg-success bg-opacity-10 d-inline-flex align-items-center justify-content-center mb-3"
                     style="width:70px;height:70px;">
                    <i class="bi bi-person-fill fs-2 text-success"></i>
                </div>
                <h5 class="card-title fw-bold">My Profile</h5>
                <p class="card-text text-muted small">
                    View and manage your account information.
                </p>
                <button class="btn btn-outline-success btn-sm mt-2">
                    Go to Profile <i class="bi bi-arrow-right ms-1"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Placeholder Card -->
    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0 border-dashed">
            <div class="card-body text-center py-5 text-muted">
                <div class="rounded-circle bg-secondary bg-opacity-10 d-inline-flex align-items-center justify-content-center mb-3"
                     style="width:70px;height:70px;">
                    <i class="bi bi-grid-3x3-gap-fill fs-2 text-secondary"></i>
                </div>
                <h5 class="card-title fw-bold">More Coming Soon</h5>
                <p class="card-text small">
                    More features will be added here.
                </p>
            </div>
        </div>
    </div>

</div>
